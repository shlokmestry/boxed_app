rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    /* Helper: user must be signed in */
    function isSignedIn() {
      return request.auth != null;
    }

    /* USERS collection */
    match /users/{userId} {
      // Any signed-in user can read profiles
      allow read: if isSignedIn();

      // Only the owner can create/update their profile
      allow write: if isSignedIn()
        && request.auth.uid == userId;
    }

    /* SOLO CAPSULES (no collaborators) */
    match /capsules/{capsuleId} {

      // CREATE: only the signed-in creator can create their capsule
      allow create: if isSignedIn()
        && request.resource.data.creatorId == request.auth.uid;

      // READ: only the creator can read their capsules
      allow read: if isSignedIn()
        && resource.data.creatorId == request.auth.uid;

      // UPDATE: only the creator can update their capsules
      allow update: if isSignedIn()
        && resource.data.creatorId == request.auth.uid;

      // DELETE: only the creator can delete their capsules
      allow delete: if isSignedIn()
        && resource.data.creatorId == request.auth.uid;

      /* MEMORIES subcollection under a capsule */
      match /memories/{memoryId} {

        // Creator can create memories under their own capsule
        allow create: if isSignedIn()
          && get(/databases/$(database)/documents/capsules/$(capsuleId))
               .data.creatorId == request.auth.uid;

        // Creator can read memories; you can later restrict by unlockDate if you want
        allow read: if isSignedIn()
          && get(/databases/$(database)/documents/capsules/$(capsuleId))
               .data.creatorId == request.auth.uid;

        // Optional: creator can update/delete memories
        allow update, delete: if isSignedIn()
          && get(/databases/$(database)/documents/capsules/$(capsuleId))
               .data.creatorId == request.auth.uid;
      }
    }
  }
}
